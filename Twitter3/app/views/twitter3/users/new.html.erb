<% content_for :title, "Signup" %>
<div class= "login signup">
    <h1>Sign Up</h1>    <br>
    <%= form_for(:user, :url => { :controller => 'users', :action => 'create'}, :html => { :id => 'signupform' }) do |f| %>

        <p> Username:</br> <%= f.text_field :username, :id => 'user_username'%> </p><br>

        <p> Email:</br> <%= f.text_field :email, :id => 'user_email' %> </p>        <br>

        <p> Password:</br> <%= f.password_field :password, :id => 'user_password'%></p> <br>

        <p> Password Confirmation:</br> <%= f.password_field :password_confirmation, :id => 'user_password_confirmation'%> </p><br>

        <%= f.submit :Signup %>
    <% end %>

    <% if @user.errors.any? %>
        <ul class="Signup_Errors">
            <% for message_error in @user.errors.full_messages %>
                <li>* <%= message_error %></li>
            <% end %>
        </ul>
    <% end %>
</div>